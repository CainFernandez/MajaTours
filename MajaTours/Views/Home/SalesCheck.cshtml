@model MajaTours.Models.ShowCartViewModel

@{
    ViewData["Title"] = "Ver Recibo";
}


<div class="d-flex container justify-content-center py-4">
    <div class="col-md-4">
    <h1>MajaTours</h1>
    <table>
        <tr>
            <td>Nombre: </td>
            <td>Manuel</td>
        </tr>
        <tr>
            <td>Factura: </td>
            <td>NÂ°1</td>
        </tr>

    </table>

     <table class="salescheck">
                    <thead class="salescheck">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TemporalSales.FirstOrDefault().Product.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TemporalSales.FirstOrDefault().Product.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TemporalSales.FirstOrDefault().Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TemporalSales.FirstOrDefault().Value)
                            </th>
                        </tr>
                    <tbody class="salescheck">
                        
                        @foreach (var item in Model.TemporalSales)
                        {
                            <tr>
                                <td >
                                    @Html.DisplayFor(modelItem => item.Product.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>
                            </tr>     
                        }
                        <tr>
                        <td style="border: 0px;"></td>
                        <td>Total</td>
                        <td></td>
                        <td>@Html.DisplayFor(model => model.Value)</td>
                        </tr>
                        
                    </tbody>
                </table>
                <div class="col-md-8">
                <div class="col-md-12">
                    <form asp-action="ShowCart">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mt-2">
                            <a asp-action="Pay" class="btn btn-outline-primary">Pagar</a>
                            <a asp-action="Index" class="btn btn-outline-success">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
    </div>
</div>


