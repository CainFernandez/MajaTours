@model MajaTours.Data.Entities.Pay

@{
    ViewData["Title"] = "Create";
}

<div class="container justify-content-center py-4">
    <h3>Modo de Pago</h3>
    <p>Pagar por tarjeta de clave</P>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Pay">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                <label asp-for="accountnumber" class="control-label"></label>
                <input asp-for="accountnumber" class="form-control" />
                <span asp-validation-for="accountnumber" class="text-danger"></span>

                <label asp-for="DataType" class="control-label"></label>
                <input asp-for="DataType" class="form-control" />
                <span asp-validation-for="DataType" class="text-danger"></span>

                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>

                 </div>               
                <div class="form-group mt-2">
                    <input type="submit" value="Crear" class="btn btn-outline-primary" />
                    <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}